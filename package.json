{
  "name": "eth-voting-app",
  "version": "1.0.0",
  "description": "Decentralized Voting Application on Ethereum",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "hardhat test",
    "node": "hardhat node",
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "verify:sepolia": "hardhat verify --network sepolia <CONTRACT_ADDRESS>",
    "verify:goerli": "hardhat verify --network goerli <CONTRACT_ADDRESS>",
    "verify:mainnet": "hardhat verify --network mainnet <CONTRACT_ADDRESS>",
    "verify:sepolia:token": "hardhat verify --network sepolia 0x775F4A912a09291Ae31422b149E0c37760C7AB02 \"Governance Token\" \"GVTOKEN\" 1000000000000000000000000 10000000000000000000000000",
    "verify:sepolia:voting": "hardhat verify --network sepolia 0xDE789a8e092004e196ac4A88Cd39d5aB8852402c 0x775F4A912a09291Ae31422b149E0c37760C7AB02 1000000000000000000000 100000000000000000000000",
    "mint:sepolia": "hardhat run scripts/mint-tokens.js --network sepolia"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "voting",
    "dapp",
    "web3",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@ethersproject/providers": "^5.8.0",
